@model ProductDtoForUpdate
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <div class="display-6">Create</div>
</div>


<form method="post" asp-action="Update" enctype="multipart/form-data">
    <div class="text-danger" asp-validation-summary="All"></div>

    <input type="hidden" asp-for="ProductId" />

    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-items="@ViewBag.Categories" asp-for="CategoryId"></select>
    </div>


    <div class="form-group">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Summary"></label>
        <input asp-for="Summary" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" value="@Model.Price"/>
    </div>

    <div class="form-group my-3">
        <img src="@Model?.ImageUrl" width="250"  class="rounded shadow"/>
    </div>
    <div class="form-group my-3">
        <label asp-for="ImageUrl"></label>
        <input name="file" type="file" class="form-control" value="@Model.Price" />
    </div>


    <div class="form-group my-3">
        <div class="btn-group">
            <button type="submit" class="btn btn-warning">
                <i class="fa fa-save"></i>
                Update
            </button>
            <a asp-action="Index" class="btn btn-outline-warning">
                <i class="fa fa-list"></i>
                Products
            </a>
        </div>
    </div>
</form>

